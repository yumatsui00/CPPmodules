CC = g++
CCFLAGS = -Wall -Wextra -Werror -std=c++98 -MMD -MP -g
DEBUG = -g -fsanitizer=integer -fsanitize=address -fsanitize=leak
SRCS = $(wildcard *.cpp)
OBJS = $(SRCS:.cpp=.o)
TARGET = ex00
TARGET1 = debug

all: $(TARGET)
	@echo $(BRIGHT_RED)
	@echo "────────█████─────────────█████"
	@echo "────████████████───────████████████"
	@echo "──████▓▓▓▓▓▓▓▓▓▓██───███▓▓▓▓▓▓▓▓▓████"
	@echo "─███▓▓▓▓▓▓▓▓▓▓▓▓▓██─██▓▓▓▓▓▓▓▓▓▓▓▓▓███"
